#!/usr/bin/make -f

DISTRIBUTION = $(shell sed -n "s/^VERSION_CODENAME=//p" /etc/os-release)
VERSION = 1.0.0
PACKAGEVERSION = $(VERSION)-0~$(DISTRIBUTION)0

%:
	dh $@

export GOCACHE=/tmp

override_dh_installsystemd:
	dh_installsystemd --name=calaos-container
	dh_installsystemd --name=calaos-server
	dh_installsystemd --name=calaos-home
	dh_installsystemd --name=calaos-web-app

override_dh_gencontrol:
	dh_gencontrol -- -v$(PACKAGEVERSION)